<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <object class="GtkFrame" id="card">
    <property name="width-request">250</property>
    <property name="height-request">350</property>
    <property name="halign">start</property> 
    <property name="vexpand">false</property> <!-- No expandir verticalmente -->
    <style>
      <class name="product-card"/>
    </style>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">8</property>

        <child>
          <object class="GtkAspectFrame">
          <property name="width-request">250</property>
          <property name="height-request">250</property>
          <property name="ratio">1</property>  <!-- 1:1 aspect ratio -->
          <property name="obey-child">false</property>

          <child>
            <object class="GtkPicture" id="card_image">
            <property name="content-fit">cover</property>
            <property name="can-shrink">true</property>
            <property name="halign">start</property>
            <property name="valign">center</property>

            <property name="file"></property>
            <style>
              <class name="card-image"/>
            </style>
            <child>
              <object class="GtkGestureClick" id="image_gesture">
                <signal name="pressed" handler="ver_detalles_cb" swapped="no"/>
              </object>
            </child>
            </object>
          </child>
        </object>
        </child>

        <child>
          <object class="GtkGrid" id="card_grid">

            <child>
              <object class="GtkLabel" id="card_subcategory">
                <property name="halign">start</property>
                <property name="valign">end</property>
                <property name="justify">left</property>
                <style>
                  <class name="card-subcategory"/>
                </style>
                <property name="label">Subcategoría</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>

            <child>
              <object class="GtkLabel" id="card_title">
                <property name="halign">start</property>
                <property name="justify">left</property>
                <property name="wrap">true</property>
                <property name="wrap-mode">word</property>
                <style>
                  <class name="card-title"/>
                </style>
                <property name="label">Nombre del producto</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>

                <child>
                  <object class="GtkGestureClick" id="title_gesture">
                    <signal name="pressed" handler="ver_detalles_cb" swapped="no"/>
                  </object>
                </child>
                
              </object>
            </child>

            <child>
              <object class="GtkLabel" id="card_price">
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="justify">center</property>
                <style>
                  <class name="card-price"/>
                </style>
                <property name="label">$0.00</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>

            <child>
              <object class="GtkButton" id="card_button">
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="label">Comprar</property>
                <property name="can-focus">false</property>
                <property name="receives-default">false</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">1</property>
                </layout>
                
                <signal name="clicked" handler="añadir_al_carrito_cb" swapped="no" />

                <style>
                    <class name="card-icon-button"/>
                </style>

                <child>
                    <object class="GtkImage" id="card_button_icon">
                        <property name="icon-name">leche-cart-add-symbolic</property>
                        <property name="pixel-size">30</property>
                    </object>
                </child>
              </object>
            </child>


          </object>
        </child>


      </object>
    </child>
  </object>

</interface>
